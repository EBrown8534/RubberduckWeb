<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rubberduck - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a href='@Url.Action("Index", "Home")' class="navbar-brand">
                    <img src='@Url.Content("~/Content/Images/RubberduckHeaderLogo.png")' alt="Rubberduck" width="280"/>
                </a>
            </div>
        </div>
        <nav class="container">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>

                <li class="dropdown">
                    <a>Features</a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Refactorings", "Refactorings", "Home")</li>
                        <li>@Html.ActionLink("Inspections", "Inspections", "Home")</li>
                        <li>@Html.ActionLink("Unit Test", "UnitTest", "Home")</li>
                    </ul>
                </li>

                <li>@Html.ActionLink("News", "News", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Rubberduck VBA. - @DateTime.Now.Year All rights reserved.</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
